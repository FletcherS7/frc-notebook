<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.plnyyanks.frcvolhelper.activities.ViewMatch"
    tools:ignore="MergeRootFrame" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Match Title"
            android:id="@+id/match_title"
            android:layout_centerHorizontal="true"
            android:paddingBottom="@dimen/activity_vertical_margin"/>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/match_title"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:id="@+id/alliance_container">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="@dimen/activity_vertical_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Red Alliance"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/red_header"
                    android:textColor="#FFFF0000"
                    android:layout_alignParentRight="true"/>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@id/red_header"
                    android:gravity="right"
                    android:id="@+id/red_alliance">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No teams yet"/>
                </LinearLayout>
            </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blue Alliance"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/blue_header"
                android:textColor="#FF0000FF" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/blue_header"
                android:gravity="left"
                android:id="@+id/blue_allaince">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No teams yet"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Team Notes"
            android:id="@+id/team_notes"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/alliance_container"
            android:paddingBottom="@dimen/activity_half_vertical_margin"/>
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/team_notes"
            android:layout_centerInParent="true">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:id="@+id/team_notes_list">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Team Selected"/>
            </LinearLayout>
        </ScrollView>

    <Button  style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Previous Match"
        android:onClick="previousMatch"
        android:id="@+id/prev_match" />
    <Button  style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Next Match"
        android:onClick="nextMatch"
        android:id="@+id/next_match"/>

</RelativeLayout>
