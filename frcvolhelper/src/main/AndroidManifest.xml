<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.plnyyanks.frcvolhelper" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.plnyyanks.frcvolhelper.activities.StartActivity"
            android:label="@string/title_activity_start" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.plnyyanks.frcvolhelper.activities.EventDownloadActivity"
            android:label="@string/title_activity_event_download"
            android:parentActivityName="com.plnyyanks.frcvolhelper.activities.StartActivity" >
        </activity>
        <activity
            android:name="com.plnyyanks.frcvolhelper.activities.ViewEvent"
            android:label="@string/title_activity_view_event"
            android:parentActivityName="com.plnyyanks.frcvolhelper.activities.StartActivity" >
        </activity>
        <activity
            android:name="com.plnyyanks.frcvolhelper.activities.ViewTeam"
            android:label="@string/title_activity_view_team"
            android:parentActivityName="com.plnyyanks.frcvolhelper.activities.ViewEvent" >
        </activity>
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.plnyyanks.frcvolhelper.activities.StartActivity">
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
